{
  "name": "electron-updater-example",
  "version": "0.7.1",
  "main": "main.js",
  "description": "electron-updater example project",
  "author": "Matt Haggard",
  "scripts": {
    "publish": "build -p always"
  },
  "devDependencies": {
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^4.0.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ulvido/electron-updater-example.git"
  },
  "build": {
    "appId": "com.updatetest.app",
    "productName": "ECZADO",
    "directories": {
      "app": "",
      "output": "dist/builder"
    },
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "linux": {
      "icon": "dist/desktop/assets/icon/256x256.png",
      "category": "Accessories",
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "win": {
      "publisherName": "Ulvi YELEN",
      "icon": "dist/desktop/assets/icon/256x256.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerLanguages": "tr_TR"
    }
  }
}